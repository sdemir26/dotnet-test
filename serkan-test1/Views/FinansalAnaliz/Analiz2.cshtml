@{
    ViewData["Title"] = "Finansal Analiz 2";
}

<div class="container-fluid p-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-1 text-dark fw-bold">
                        <i class="bi bi-pie-chart me-2 text-success"></i>
                        Finansal Analiz 2
                    </h3>
                    <p class="text-muted mb-0">Detaylı finansal raporlar ve grafikler</p>
                </div>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Ana Sayfa
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- İçerik -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-success bg-gradient text-white border-0 py-3">
                    <h6 class="mb-0 fw-semibold">
                        <i class="bi bi-bar-chart me-2"></i>
                        Detaylı Finansal Rapor
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle me-2"></i>
                        <strong>Finansal Analiz 2</strong> sayfasına hoş geldiniz. 
                        Bu sayfa detaylı finansal raporlar için tasarlanmıştır.
                    </div>
                    
                    <!-- Örnek içerik -->
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card border-0 bg-light">
                                <div class="card-body text-center">
                                    <i class="bi bi-graph-up-arrow text-success" style="font-size: 2rem;"></i>
                                    <h6 class="card-title mt-2">Kar Analizi</h6>
                                    <p class="card-text">Yıllık kar trendleri</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-0 bg-light">
                                <div class="card-body text-center">
                                    <i class="bi bi-currency-exchange text-primary" style="font-size: 2rem;"></i>
                                    <h6 class="card-title mt-2">Nakit Akışı</h6>
                                    <p class="card-text">Aylık nakit akış analizi</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-0 bg-light">
                                <div class="card-body text-center">
                                    <i class="bi bi-pie-chart text-warning" style="font-size: 2rem;"></i>
                                    <h6 class="card-title mt-2">Dağılım Analizi</h6>
                                    <p class="card-text">Gelir-gider dağılımı</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
