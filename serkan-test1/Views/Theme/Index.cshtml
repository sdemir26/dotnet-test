    Layout = null;
}
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Webpack + Bootstrap 5 + Tailwind CSS 4 + RTL/LTR</title>
    <link rel="stylesheet" href="/static/css/app.css">
</head>
<body>
<div class="container tw-mx-auto tw-my-8 tw-p-8 tw-bg-gray-100 tw-rounded-lg tw-shadow-lg">
    <h1 class="tw-text-red-500 tw-font-bold">Merhaba Tailwind!</h1>
    <h1 class="tw-text-3xl tw-font-bold tw-text-center tw-mb-6">Webpack + Bootstrap + Tailwind CSS + RTL/LTR</h1>

    <div class="tw-flex tw-justify-center tw-gap-4 tw-mb-6">
        <button id="ltrBtn" class="btn btn-primary">Switch to LTR</button>
        <button id="rtlBtn" class="btn btn-secondary">Switch to RTL</button>
    </div>

    <div class="tw-bg-white tw-rounded-lg tw-shadow-md tw-p-6 tw-mb-6">
        <h2 class="tw-text-2xl tw-font-bold tw-text-gray-800 tw-mb-4">Tailwind Card</h2>
        <p class="tw-text-gray-600 tw-leading-relaxed">
            This is a simple card styled with Tailwind CSS utility classes.
            It uses <code class="tw-font-mono tw-text-sm tw-bg-gray-200 tw-p-1 tw-rounded">tw-bg-white</code>,
            <code class="tw-font-mono tw-text-sm tw-bg-gray-200 tw-p-1 tw-rounded">tw-rounded-lg</code>,
            <code class="tw-font-mono tw-text-sm tw-bg-gray-200 tw-p-1 tw-rounded">tw-shadow-md</code>, and
            <code class="tw-font-mono tw-text-sm tw-bg-gray-200 tw-p-1 tw-rounded">tw-p-6</code>.
        </p>
        <div class="tw-w-full tw-h-12 tw-bg-gradient-to-r tw-from-primary-500 tw-to-blue-500 tw-rounded tw-mt-4"></div>
    </div>

    <div class="card tw-mb-6">
        <div class="card-body">
            <h2 class="card-title">Bootstrap Card</h2>
            <p class="card-text">
                This is a Bootstrap card. It demonstrates Bootstrap's default styling.
            </p>
            <button class="btn btn-success">Bootstrap Button</button>
        </div>
    </div>

    <div class="rtl-card">
        <h2 class="rtl-title">RTL-Özel Kart</h2>
        <p class="rtl-content">Bu kart, özel RTL stilleriyle biçimlendirilmiştir.</p>
    </div>
</div>



<div class="tw-trigger">Hell tett o</div>

<!-- Direction Toggle Button -->
<button id="directionToggle" class="direction-toggle btn btn-primary">
    🔄 RTL/LTR
</button>

<!-- Bootstrap Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
        <a class="navbar-brand" href="#">My App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#">Ana Sayfa</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Hakkında</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        Dil
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Türkçe</a></li>
                        <li><a class="dropdown-item" href="#">English</a></li>
                        <li><a class="dropdown-item" href="#">العربية</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Main Content -->
<div class="container my-5">
    <div class="row">
        <div class="col-lg-8">
            <h1 class="tw-text-3xl tw-font-bold tw-text-primary-600 mb-4">
                Bootstrap 5.3 + Tailwind CSS v4
            </h1>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title tw-text-xl tw-font-semibold">RTL/LTR Test Kartı</h5>
                    <p class="card-text">
                        Bu kart hem Bootstrap sınıfları hem de Tailwind sınıfları kullanmaktadır.
                        RTL/LTR geçişini test etmek için sağ üstteki butona tıklayın.
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-success tw-px-3 tw-py-1">Bootstrap + Tailwind</span>
                        <button class="btn btn-outline-primary btn-sm">
                            Detay <i class="bi bi-arrow-right tw-ml-2"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Form Example -->
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0 tw-font-medium">Form Örneği</h6>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="firstName" class="form-label tw-text-sm tw-font-medium">Ad</label>
                                <input type="text" class="form-control" id="firstName" placeholder="Adınızı girin">
                            </div>
                            <div class="col-md-6">
                                <label for="lastName" class="form-label tw-text-sm tw-font-medium">Soyad</label>
                                <input type="text" class="form-control" id="lastName" placeholder="Soyadınızı girin">
                            </div>
                            <div class="col-12">
                                <label for="email" class="form-label tw-text-sm tw-font-medium">E-posta</label>
                                <input type="email" class="form-control" id="email" placeholder="email@example.com">
                            </div>
                            <div class="col-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="agreement">
                                    <label class="form-check-label tw-text-sm" for="agreement">
                                        Kullanım şartlarını kabul ediyorum
                                    </label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary tw-px-6">Gönder</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header bg-light">
                    <h6 class="mb-0 tw-font-semibold">Tailwind Utilities</h6>
                </div>
                <div class="card-body">
                    <div class="tw-space-y-3">
                        <div class="tw-p-3 tw-bg-primary-50 tw-rounded-lg tw-border-l-4 tw-border-primary-500">
                            <p class="tw-text-sm tw-text-primary-700 tw-mb-0">Primary renk paleti</p>
                        </div>
                        <div class="tw-flex tw-justify-between tw-items-center">
                            <span class="tw-text-sm tw-text-gray-600">Margin/Padding</span>
                            <span class="tw-px-2 tw-py-1 tw-bg-gray-100 tw-rounded tw-text-xs">tw-mx-auto</span>
                        </div>
                        <div class="tw-grid tw-grid-cols-2 tw-gap-2">
                            <div class="tw-h-8 tw-bg-blue-500 tw-rounded"></div>
                            <div class="tw-h-8 tw-bg-green-500 tw-rounded"></div>
                            <div class="tw-h-8 tw-bg-purple-500 tw-rounded"></div>
                            <div class="tw-h-8 tw-bg-red-500 tw-rounded"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Alert Example -->
            <div class="alert alert-info tw-mt-4" role="alert">
                <h6 class="alert-heading tw-font-semibold">RTL Test</h6>
                <p class="tw-text-sm tw-mb-2">Bu uyarı Bootstrap alert komponenti ile Tailwind typography sınıflarını birleştirmektedir.</p>
                <hr>
                <p class="tw-mb-0 tw-text-xs">Direction: <span id="currentDirection" class="tw-font-mono">LTR</span></p>
            </div>
        </div>
    </div>
</div>


<script src="/static/js/app.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const html = document.documentElement;
        const toggleBtn = document.getElementById('directionToggle');
        const currentDirSpan = document.getElementById('currentDirection');
        const mainCSS = document.getElementById('main-css');
        const rtlCSS = document.getElementById('rtl-css');

        let isRTL = false;

        toggleBtn.addEventListener('click', function() {
            isRTL = !isRTL;

            if (isRTL) {
                // RTL'e geç
                html.setAttribute('dir', 'rtl');
                html.setAttribute('lang', 'ar');
                mainCSS.disabled = true;
                rtlCSS.disabled = false;
                currentDirSpan.textContent = 'RTL';
                toggleBtn.style.left = '20px';
                toggleBtn.style.right = 'auto';
            } else {
                // LTR'ye geç
                html.setAttribute('dir', 'ltr');
                html.setAttribute('lang', 'tr');
                mainCSS.disabled = false;
                rtlCSS.disabled = true;
                currentDirSpan.textContent = 'LTR';
                toggleBtn.style.right = '20px';
                toggleBtn.style.left = 'auto';
            }
        });
    });
</script>
</body>
</html>