@model serkan_test1.Models.FirmaBilgileriViewModel

<!-- Firma Unvanı -->
<div class="modal fade" id="modalFirmaUnvani" tabindex="-1" aria-labelledby="modalFirmaUnvaniLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-action="GuncelleFirmaUnvani" method="post" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalFirmaUnvaniLabel">Firma Unvanı Güncelle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <label asp-for="FirmaUnvani" class="form-label">Firma Unvanı *</label>
                <input asp-for="FirmaUnvani" class="form-control" required />
                <span asp-validation-for="FirmaUnvani" class="text-danger"></span>
                <div class="invalid-feedback">Firma unvanı zorunludur.</div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>
</div>

