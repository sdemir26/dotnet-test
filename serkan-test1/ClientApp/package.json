{
  "name": "webpack-bootstrap-tailwind-rtl",
  "version": "1.0.0",
  "description": "Webpack, Bootstrap 5.3 Sass, Tailwind CSS 3.x ve RTL/LTR desteği ile frontend tasarımı.",
  "main": "src/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack serve --config webpack.config.js",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "build:analyze": "cross-env NODE_ENV=production USE_ANALYZE=true webpack --config webpack.config.js",
    "build:rtl": "npm run build && node generate-rtl.js",
    "lint": "eslint \"{src,public}/**/*.js\""
  },
  "keywords": [
    "webpack",
    "bootstrap",
    "tailwind",
    "rtl",
    "ltr",
    "sass",
    "scss"
  ],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^9.1.3",
    "bootstrap": "^5.3.7",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "dotenv-webpack": "^8.1.0",
    "eslint": "^8.57.0",
    "eslint-webpack-plugin": "^4.1.0",
    "glob": "^10.4.1",
    "mini-css-extract-plugin": "^2.9.0",
