@{
    ViewData["Title"] = "Talep Onay Ekranı - Ana Sayfa";
}

<div class="container-fluid p-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="text-center">
                <h1 class="display-4 text-primary mb-3">
                    <i class="bi bi-shield-check me-3"></i>
                    Talep Onay Ekranı
                </h1>
                <p class="lead text-muted">Değişiklik taleplerini yönetmek için admin panelini kullanın</p>
            </div>
        </div>
    </div>

    <!-- Ana Kartlar -->
    <div class="row g-4">
        <!-- Talep Listesi -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-list-ul text-primary" style="font-size: 4rem;"></i>
                    </div>
                    <h4 class="card-title mb-3">Talep Listesi</h4>
                    <p class="card-text text-muted mb-4">
                        Tüm değişiklik taleplerini görüntüleyin, filtreleyin ve yönetin.
                    </p>
                    <a href="@Url.Action("Index", "TalepOnay")" class="btn btn-primary btn-lg">
                        <i class="bi bi-arrow-right me-2"></i>Talep Listesine Git
                    </a>
                </div>
            </div>
        </div>

        <!-- Hızlı İşlemler -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-lightning text-warning" style="font-size: 4rem;"></i>
                    </div>
                    <h4 class="card-title mb-3">Hızlı İşlemler</h4>
                    <p class="card-text text-muted mb-4">
                        Bekleyen talepleri hızlıca onaylayın veya reddedin.
                    </p>
                    <a href="@Url.Action("Index", "TalepOnay")" class="btn btn-warning btn-lg">
                        <i class="bi bi-clock me-2"></i>Bekleyen Talepler
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- İstatistikler -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-graph-up me-2 text-primary"></i>
                        Sistem İstatistikleri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <div class="text-center p-3">
                                <div class="text-primary mb-2">
                                    <i class="bi bi-clock" style="font-size: 2rem;"></i>
                                </div>
                                <h4 class="mb-1">0</h4>
                                <small class="text-muted">Bekleyen Talep</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center p-3">
                                <div class="text-success mb-2">
                                    <i class="bi bi-check-circle" style="font-size: 2rem;"></i>
                                </div>
                                <h4 class="mb-1">0</h4>
                                <small class="text-muted">Onaylanan</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center p-3">
                                <div class="text-danger mb-2">
                                    <i class="bi bi-x-circle" style="font-size: 2rem;"></i>
                                </div>
                                <h4 class="mb-1">0</h4>
                                <small class="text-muted">Reddedilen</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center p-3">
                                <div class="text-info mb-2">
                                    <i class="bi bi-building" style="font-size: 2rem;"></i>
                                </div>
                                <h4 class="mb-1">1</h4>
                                <small class="text-muted">Toplam Firma</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
