@model IEnumerable<TalepOnayEkrani.Models.DegisiklikTalebi>
@{
    ViewData["Title"] = "Admin - Değişiklik Talepleri";
}

<div class="container-fluid p-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-1 text-dark fw-bold">
                        <i class="bi bi-shield-check me-2 text-primary"></i>
                        Admin - Değişiklik Talepleri
                    </h3>
                    <p class="text-muted mb-0">Kullanıcı taleplerini inceleyin ve karar verin</p>
                </div>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Ana Sayfa
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Mesajlar -->
    @if (ViewBag.AdminMesaj != null)
    {
        <div class="alert alert-success alert-dismissible fade show py-2 mb-3" role="alert">
            <i class="bi bi-check-circle me-2"></i>@ViewBag.AdminMesaj
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (ViewBag.AdminHata != null)
    {
        <div class="alert alert-danger alert-dismissible fade show py-2 mb-3" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@ViewBag.AdminHata
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtreler -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body py-3">
                    <div class="row g-3 align-items-center">
                        <div class="col-md-3">
                            <label class="form-label small fw-medium">Durum Filtresi:</label>
                            <select class="form-select form-select-sm" id="durumFilter">
                                <option value="">Tümü</option>
                                <option value="0">Kontrol Ediliyor</option>
                                <option value="1">Onaylandı</option>
                                <option value="2">Reddedildi</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label small fw-medium">Firma:</label>
                            <select class="form-select form-select-sm" id="firmaFilter">
                                <option value="">Tümü</option>
                                <option value="A Emlak">A Emlak</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label small fw-medium">Tarih Aralığı:</label>
                            <input type="date" class="form-control form-control-sm" id="tarihFilter">
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="button" class="btn btn-primary btn-sm me-2" onclick="filterTalepler()">
                                <i class="bi bi-funnel me-1"></i>Filtrele
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="clearFilters()">
                                <i class="bi bi-x-circle me-1"></i>Temizle
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Talep Listesi -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary bg-gradient text-white border-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="mb-0 fw-semibold">
                            <i class="bi bi-list-ul me-2"></i>
                            Talep Listesi
                        </h6>
                        <span class="badge bg-light text-dark">
                            Toplam: @ViewBag.ToplamTalep
                        </span>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox text-muted mb-3" style="font-size: 3rem;"></i>
                            <h5 class="text-muted">Henüz değişiklik talebi bulunmuyor</h5>
                            <p class="text-muted">Kullanıcılar talep oluşturduğunda burada görünecek.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0" id="taleplerTable">
                                <thead class="table-light">
                                    <tr>
                                        <th class="py-3 px-3">
                                            <i class="bi bi-building me-1"></i>Firma
                                        </th>
                                        <th class="py-3 px-3">
                                            <i class="bi bi-person me-1"></i>Kullanıcı
                                        </th>
                                        <th class="py-3 px-3">
                                            <i class="bi bi-gear me-1"></i>Alan
                                        </th>
                                        <th class="py-3 px-3">
                                            <i class="bi bi-arrow-right me-1"></i>Değişiklik
                                        </th>
                                        <th class="py-3 px-3">
                                            <i class="bi bi-calendar me-1"></i>Talep Tarihi
                                        </th>
                                        <th class="py-3 px-3">
                                            <i class="bi bi-flag me-1"></i>Durum
                                        </th>
                                        <th class="py-3 px-3 text-center">
                                            <i class="bi bi-tools me-1"></i>İşlemler
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var talep in Model)
                                    {
                                        <tr class="talep-row" data-durum="@((int)talep.Durum)" data-firma="@talep.FirmaAdi">
                                            <td class="py-3 px-3">
                                                <strong>@talep.FirmaAdi</strong>
                                            </td>
                                            <td class="py-3 px-3">
                                                <span class="badge bg-secondary">@talep.KullaniciAdi</span>
                                            </td>
                                            <td class="py-3 px-3">
                                                <span class="badge bg-info">@talep.AlanAdi</span>
                                            </td>
                                            <td class="py-3 px-3">
                                                <div class="d-flex flex-column">
                                                    <small class="text-muted">@talep.EskiDeger</small>
                                                    <i class="bi bi-arrow-down text-primary"></i>
                                                    <strong class="text-primary">@talep.YeniDeger</strong>
                                                </div>
                                            </td>
                                            <td class="py-3 px-3">
                                                <small class="text-muted">@talep.TalepTarihi.ToString("dd.MM.yyyy HH:mm")</small>
                                            </td>
                                            <td class="py-3 px-3">
                                                @switch (talep.Durum)
                                                {
                                                    case TalepOnayEkrani.Models.TalepDurumu.KontrolEdiliyor:
                                                        <span class="badge bg-warning">
                                                            <i class="bi bi-clock me-1"></i>Kontrol Ediliyor
                                                        </span>
                                                        break;
                                                    case TalepOnayEkrani.Models.TalepDurumu.Onaylandi:
                                                        <span class="badge bg-success">
                                                            <i class="bi bi-check me-1"></i>Onaylandı
                                                        </span>
                                                        break;
                                                    case TalepOnayEkrani.Models.TalepDurumu.Reddedildi:
                                                        <span class="badge bg-danger">
                                                            <i class="bi bi-times me-1"></i>Reddedildi
                                                        </span>
                                                        break;
                                                }
                                            </td>
                                            <td class="py-3 px-3 text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Detay", "TalepOnay", new { id = talep.Id })" 
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye me-1"></i>Detay
                                                    </a>
                                                    @if (talep.Durum == TalepOnayEkrani.Models.TalepDurumu.KontrolEdiliyor)
                                                    {
                                                        <button type="button" class="btn btn-sm btn-success" 
                                                                onclick="onaylaTalep(@talep.Id)">
                                                            <i class="bi bi-check me-1"></i>Onayla
                                                        </button>
                                                        <button type="button" class="btn btn-sm btn-danger" 
                                                                onclick="reddetTalep(@talep.Id)">
                                                            <i class="bi bi-times me-1"></i>Reddet
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Sayfalama -->
                        @if (ViewBag.ToplamSayfa > 1)
                        {
                            <div class="card-footer bg-light border-0 py-3">
                                <nav aria-label="Talep sayfaları">
                                    <ul class="pagination justify-content-center mb-0">
                                        @if (ViewBag.Sayfa > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="@Url.Action("Index", new { sayfa = ViewBag.Sayfa - 1, sayfaBoyutu = ViewBag.SayfaBoyutu })">
                                                    <i class="bi bi-chevron-left"></i> Önceki
                                                </a>
                                            </li>
                                        }

                                        @for (int i = Math.Max(1, ViewBag.Sayfa - 2); i <= Math.Min(ViewBag.ToplamSayfa, ViewBag.Sayfa + 2); i++)
                                        {
                                            <li class="page-item @(i == ViewBag.Sayfa ? "active" : "")">
                                                <a class="page-link" href="@Url.Action("Index", new { sayfa = i, sayfaBoyutu = ViewBag.SayfaBoyutu })">@i</a>
                                            </li>
                                        }

                                        @if (ViewBag.Sayfa < ViewBag.ToplamSayfa)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="@Url.Action("Index", new { sayfa = ViewBag.Sayfa + 1, sayfaBoyutu = ViewBag.SayfaBoyutu })">
                                                    Sonraki <i class="bi bi-chevron-right"></i>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </nav>
                                
                                <div class="text-center text-muted mt-2">
                                    <small>
                                        Sayfa @ViewBag.Sayfa / @ViewBag.ToplamSayfa 
                                        (Toplam @ViewBag.ToplamTalep talep)
                                    </small>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Filtreleme fonksiyonu
        function filterTalepler() {
            const durumFilter = document.getElementById('durumFilter').value;
            const firmaFilter = document.getElementById('firmaFilter').value;
            const tarihFilter = document.getElementById('tarihFilter').value;
            
            const rows = document.querySelectorAll('.talep-row');
            
            rows.forEach(row => {
                let show = true;
                
                // Durum filtresi
                if (durumFilter && row.dataset.durum !== durumFilter) {
                    show = false;
                }
                
                // Firma filtresi
                if (firmaFilter && row.dataset.firma !== firmaFilter) {
                    show = false;
                }
                
                // Tarih filtresi (basit implementasyon)
                if (tarihFilter) {
                    const talepTarihi = row.querySelector('td:nth-child(5) small').textContent;
                    // Burada daha gelişmiş tarih karşılaştırması yapılabilir
                }
                
                row.style.display = show ? '' : 'none';
            });
        }
        
        // Filtreleri temizle
        function clearFilters() {
            document.getElementById('durumFilter').value = '';
            document.getElementById('firmaFilter').value = '';
            document.getElementById('tarihFilter').value = '';
            
            const rows = document.querySelectorAll('.talep-row');
            rows.forEach(row => row.style.display = '');
        }
        
        // Hızlı onaylama
        function onaylaTalep(talepId) {
            if (confirm('Bu talebi onaylamak istediğinizden emin misiniz?')) {
                var form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("Onayla", "TalepOnay")';
                
                var input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'talepId';
                input.value = talepId;
                
                form.appendChild(input);
                document.body.appendChild(form);
                form.submit();
            }
        }
        
        // Hızlı reddetme
        function reddetTalep(talepId) {
            var adminNotu = prompt('Red sebebini yazın:');
            if (adminNotu && adminNotu.trim()) {
                var form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("Reddet", "TalepOnay")';
                
                var input1 = document.createElement('input');
                input1.type = 'hidden';
                input1.name = 'talepId';
                input1.value = talepId;
                
                var input2 = document.createElement('input');
                input2.type = 'hidden';
                input2.name = 'adminNotu';
                input2.value = adminNotu.trim();
                
                form.appendChild(input1);
                form.appendChild(input2);
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}
