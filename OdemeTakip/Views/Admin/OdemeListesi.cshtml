@{
    ViewData["Title"] = "Ödeme Listesi";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Ödeme Listesi</h1>
    <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" onclick="alert('Yeni ödeme ekleme özelliği yakında eklenecek!')">
        <i class="fas fa-plus fa-sm text-white-50"></i> Yeni Ödeme Ekle
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Tüm Ödemeler</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-sm" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Firma</th>
                        <th>Ödeme Tarihi</th>
                        <th>Dönem</th>
                        <th>Ödeme Türü</th>
                        <th>Ödeme Yöntemi</th>
                        <th>Durum</th>
                        <th>İlan Sayısı</th>
                        <th>İskonto</th>
                        <th>Net Tutar</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var odeme in ViewBag.Odemeler)
                    {
                        <tr>
                            <td>@odeme.Firma.FirmaAdi</td>
                            <td>@odeme.OdemeTarihi.ToString("dd.MM.yyyy")</td>
                            <td>@odeme.OdemeDonemi</td>
                            <td>@odeme.OdemeTuru</td>
                            <td>
                                @if (odeme.Id == -1)
                                {
                                    <span class="text-muted">-</span>
                                }
                                else
                                {
                                    @odeme.OdemeYontemi
                                }
                            </td>
                            <td>
                                @if (odeme.Id == -1)
                                {
                                    <span class="badge bg-danger">Ödenmemiş Borç</span>
                                }
                                else if (odeme.OdemeDurumu == OdemeDurumu.Odendi)
                                {
                                    <span class="badge bg-success">Ödendi</span>
                                }
                                else if (odeme.OdemeDurumu == OdemeDurumu.Bekliyor)
                                {
                                    <span class="badge bg-warning">Bekliyor</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Gecikmiş</span>
                                }
                            </td>
                            <td>@odeme.IlanSayisi</td>
                            <td>%@odeme.IskontoOrani</td>
                            <td>@odeme.NetTutar.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
                            <td>
                                @if (odeme.Id == -1)
                                {
                                    <button class="btn btn-xs btn-warning" onclick="alert('Ödenmemiş borç - Tahsilat işlemi yakında eklenecek!')">
                                        <i class="fas fa-exclamation-triangle"></i> Tahsilat
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-xs btn-success" onclick="alert('Ödeme onaylama özelliği yakında eklenecek!')">
                                        <i class="fas fa-check"></i> Onayla
                                    </button>
                                    <button class="btn btn-xs btn-info" onclick="alert('Fatura görüntüleme özelliği yakında eklenecek!')">
                                        <i class="fas fa-file-invoice"></i> Fatura
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
